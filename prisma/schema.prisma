generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Todo {
  id        String  @id @default(uuid())
  title     String  @unique
  completed Boolean @default(false)
}

model Student {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  proposals Proposal[]
}

model Proposal {
  id          Int            @id @default(autoincrement())
  title       String         @unique
  description String
  status      ProposalStatus @default(PENDING)
  submittedAt DateTime       @default(now())
  submitterId Int
  submitter   Student        @relation(fields: [submitterId], references: [id], onDelete: Cascade)
}

enum ProposalStatus {
  PENDING
  APPROVED
  REJECTED
}
